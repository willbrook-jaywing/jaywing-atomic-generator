{% set pageid = '<%= pageId %>' %}
{% set sectionid = 'components' %}

{% extends 'layouts/docs/layout.docs.master.html' %}

{% block metaTitle %}<%= name %> | Atomic: Components{% endblock %}

{% block content %}

  <h1 class="Article-title"><%= name %></h1>
  <p class="Text--lead"><%= description %></p>

  <hr class="Article-divider">

  <h2 id="section-usage"><a href="#section-usage" class="textLinkReset">Usage</a></h2>

  <div class="docs-example">
    <%- exampleHtml %>
  </div>

  <div class="docs-code docs-code--html">
    <pre class="scrollXauto">
      <code class="html">
        <%- codeHtml %>
      </code>
    </pre>
  </div>

{% endblock %}

